{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}
